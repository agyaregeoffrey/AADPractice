<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TabStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@android:color/transparent</item>
        <item name="tabTextColor">@color/colorWhite</item>
        <item name="tabIndicatorColor">@color/colorWhite</item>
        <item name="tabTextAppearance">@android:style/TextAppearance.Widget.TabWidget</item>
    </style>

    <style name="SubmitButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="backgroundTint">@color/colorWhite</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="SubmitButton2" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="SubmitButton3" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="backgroundTint">@color/colorWhite</item>
        <item name="cornerRadius">6dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/colorAccent</item>
    </style>

    <style name="HintStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColorHint">@color/textColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>